EdgeDetectionNode
{
    id edgeDetection
    debug ImageDebugNode
    dependence
    {
        input inputImage
    }
    parameter
    {
        BlurKHeight 3
        BlurKWidth 3
        IsOnCUDA false
        L2gradient true
        Threshold1 50
        Threshold2 200
    }
}
OpenniNode
{
    id inputImage
    debug ImageDebugNode
    parameter
    {
        IsOnCUDA false
        TopicRGB /camera/rgb/image_mono
    }
}
LineDetectionNode
{
    id lineDetection
    debug ImageDebugNode
    dependence
    {
        input edgeDetection
    }
    parameter
    {
        IsOnCUDA false
        MaxLineGap 20
        MinLineLength 10
        Rho 1
        Theta 180
        Threshold 80
    }
}
